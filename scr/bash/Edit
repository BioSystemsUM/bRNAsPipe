#### Edit directory/file names according to your need:
BaseDir='/home/<user>/bRNAsPipe' # basic directory
GenomeRefURL='ftp://ftp.ensembl.org/pub/release-99/fasta/homo_sapiens/dna/Homo_sapiens.GRCh38.dna.primary_assembly.fa.gz'
GenomeRef=$(basename $GenomeRefURL .gz) # genome reference file name
AnnoURL='ftp://ftp.ensembl.org/pub/release-99/gtf/homo_sapiens/Homo_sapiens.GRCh38.99.gtf.gz'
AnnoFName=$(basename $AnnoURL .gz) # annotation .gtf file name
